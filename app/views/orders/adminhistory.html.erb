<body>

<p style="color: green" ><%= notice %></p>

<h1>Orders History</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Order Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Ordered Date</th>
        <th>Gift Card Value</th>
        <%# <th>Mobile No</th>
        <th>Address</th> %>
        <th>Commission<br>(10%)</th>
        <th>Delivery Status</th>
        <th>Action</th>
        <th colspan="3"></th>
      </tr>
    </thead>
 <tbody>
  
  <% @orders.each do |order| %>
      <tr>
          <td>
            <%= order.orderId%>
          </td>
          <td>
            <%= order.firstName%>
          </td>
          <td><%= order.lastName %></td>
          <td><%= order.created_at%></td>
          <td><%= order.giftValue %></td>
          <td><%= order.giftValue*0.1%></td>
          <% @x = order.orderId%>
          
          <td><strong><%= order.delivery_status%></strong></td>
          <% if order.delivery_status == "OUT FOR DELIVERY"%>
              <%# <td><%= button_to 'Mark Delivered',onclick="changeStatus()",class:"btn btn-primary" %>
              <td><button class="btn btn-primary" onclick="changeStatus()">Mark Delivered</button></td>
          <% elsif order.delivery_status == "OUT FOR DELIVERY"%>
              <td><%= button_to 'Mark DELIVERED', order.delivery_status = "DELIVERED" ,class:"btn btn-primary"  %></td>
          <% else %>
              <td><%= button_to 'Delivered' ,class:"btn btn-primary" %></td>
          <% end %>

          <%# <td><%= order.mobileNo %>
          <%# <td><%= order.address %>
        </tr> 
    <% end %>
 </tbody>
 
</table>

</body>
